{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "always",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",
  "phpVersion": "7.4",
  "braceStyle": "1tbs",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "parser": "php",
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "trailingCommaPHP": true,
        "braceStyle": "1tbs"
      }
    }
  ]
}
